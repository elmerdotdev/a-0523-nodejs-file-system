{
  "compilerOptions": {
    "rootDir": "./src", // server ts files
    "outDir": "./dist", // compiled js files
    "target": "ES2015", // target ES version
    "module": "CommonJS", // code generated
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}